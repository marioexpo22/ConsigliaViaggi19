<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewInformazioni"
            android:background="@color/colorBianco"

            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>


    <RatingBar
            android:layout_width="237dp"
            android:layout_height="43dp"
            android:id="@+id/valutazioneStrutturaInformazioni"

            android:progressTint="@color/colorOro" android:secondaryProgressTint="@color/colorOro"
            android:numStars="5"
            android:stepSize="0.5"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:transformPivotX="0dp"

            app:layout_constraintTop_toTopOf="@+id/viewInformazioni"
            android:layout_marginTop="170dp" app:layout_constraintBottom_toBottomOf="@+id/viewInformazioni"
            android:layout_marginBottom="518dp" app:layout_constraintStart_toStartOf="@+id/viewInformazioni"
            android:layout_marginStart="27dp" android:layout_marginEnd="147dp"
            app:layout_constraintEnd_toEndOf="@+id/viewInformazioni"/>
    <TextView
            android:text="@string/nome_struttura"
            android:layout_width="356dp"
            android:layout_height="34dp" android:id="@+id/nomeStrutturaInformazioni"
            android:textAlignment="textStart" android:textAllCaps="true"
            android:textSize="24sp"
            android:textColor="@color/colorNero"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="@+id/viewInformazioni"
            android:layout_marginBottom="584dp" app:layout_constraintStart_toStartOf="@+id/viewInformazioni"
            android:layout_marginStart="27dp" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="@+id/viewInformazioni" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/viewInformazioni" android:layout_marginTop="114dp"/>

    <ScrollView
            android:layout_width="359dp"
            android:layout_height="286dp"

            android:id="@+id/scrollViewInformazioni"
            app:layout_constraintBottom_toBottomOf="@+id/viewInformazioni"
            android:layout_marginBottom="209dp" app:layout_constraintStart_toStartOf="@+id/viewInformazioni"
            android:layout_marginStart="27dp" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="@+id/viewInformazioni"
            app:layout_constraintTop_toTopOf="@+id/viewInformazioni" android:layout_marginTop="236dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:text="@string/nome_struttura"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/descrizioneStrutturaInformazioni"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textColor="@color/colorNero"/>
        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="Media recensioni"
            android:layout_width="121dp"
            android:layout_height="24dp"
            android:id="@+id/mediaRecensioni"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorNero"

            app:layout_constraintBottom_toBottomOf="@+id/viewInformazioni"
            android:layout_marginBottom="528dp" app:layout_constraintStart_toStartOf="@+id/viewInformazioni"
            android:layout_marginStart="264dp" app:layout_constraintTop_toTopOf="@+id/viewInformazioni"
            android:layout_marginTop="179dp" android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="@+id/viewInformazioni"/>

</androidx.constraintlayout.widget.ConstraintLayout>