<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <View android:layout_width="match_parent" android:layout_height="match_parent"
          android:id="@+id/sfondoSchermataRecensisci"/>

    <TextView
            android:text="Scrivi la tua recensione.."
            android:layout_width="382dp"
            android:layout_height="55dp"
            android:id="@+id/scriviRecensioneTitolo"
            android:textSize="27sp"
            android:textColor="@color/colorNero"
            android:textStyle="bold"

            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci"
            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginBottom="660dp" app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginTop="16dp"/>

    <TextView
            android:text="Valutazione:"
            android:layout_width="105dp"
            android:layout_height="26dp"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:textColor="@color/colorNero"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginTop="85dp" app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginBottom="620dp" android:layout_marginEnd="270dp"
            app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci"
            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci" android:layout_marginStart="36dp"/>

    <RatingBar
            android:layout_width="237dp"
            android:layout_height="43dp"
            android:id="@+id/valutazioneLuogoPerRecensione"

            android:progressTint="@color/colorOro" android:secondaryProgressTint="@color/colorOro"
            android:numStars="5" android:stepSize="0.5" android:scaleX="0.8" android:scaleY="0.8"
            android:transformPivotX="0dp"

            app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci" android:layout_marginBottom="612dp"
            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci" android:layout_marginStart="162dp"
            app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci" android:layout_marginEnd="12dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginTop="76dp"/>

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="310dp"
            android:layout_height="51dp"
            android:id="@+id/titoloRecensioneTextField"
            android:hint="Titolo recensione"

            app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci" android:layout_marginTop="143dp"
            app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci" android:layout_marginBottom="537dp"
            android:layout_marginEnd="51dp" app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci"
            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci" android:layout_marginStart="50dp"/>

    <EditText
            android:layout_width="310dp"
            android:layout_height="301dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/contenutoRecensione"
            android:hint="Scrivi la tua recensione.."

            app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci" android:layout_marginTop="233dp"
            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci" android:layout_marginStart="50dp"
            android:layout_marginEnd="51dp" app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci"
            app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci" android:layout_marginBottom="197dp"
            />

    <Button
            android:text="Pubblica"
            android:layout_width="126dp"
            android:layout_height="56dp"
            android:id="@+id/pubblicaRecensioneButton"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorBianco"

            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginStart="234dp" app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginTop="595dp" android:layout_marginEnd="51dp"
            app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci"
            app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci" android:layout_marginBottom="80dp"/>
    <Button
            android:text="Annulla"
            android:layout_width="126dp"
            android:layout_height="56dp"
            android:id="@+id/annullaPubblicaRecensioneButton"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorBianco"

            app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginTop="595dp" android:layout_marginEnd="235dp"
            app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci"
            app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci" android:layout_marginBottom="80dp"
            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci" android:layout_marginStart="50dp"/>
    <CheckBox
            android:text="Nome e cognome"
            android:layout_width="126dp"
            android:layout_height="38dp" android:id="@+id/nomeCognome"
            app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginTop="548dp" app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginBottom="145dp" android:layout_marginEnd="235dp"
            app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci"
            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci" android:layout_marginStart="50dp"/>
    <CheckBox
            android:text="Nickname"
            android:layout_width="126dp"
            android:layout_height="38dp" android:id="@+id/nickname"
            android:layout_marginEnd="51dp" app:layout_constraintEnd_toEndOf="@+id/sfondoSchermataRecensisci"
            app:layout_constraintTop_toTopOf="@+id/sfondoSchermataRecensisci" android:layout_marginTop="548dp"
            app:layout_constraintStart_toStartOf="@+id/sfondoSchermataRecensisci" android:layout_marginStart="234dp"
            app:layout_constraintBottom_toBottomOf="@+id/sfondoSchermataRecensisci"
            android:layout_marginBottom="145dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>