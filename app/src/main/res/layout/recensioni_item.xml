<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titoloDellaRecensione"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/colorNero"/>
        <RatingBar
                android:layout_width="237dp"
                android:layout_height="43dp"
                android:id="@+id/valutazioneRecensione"

                android:progressTint="@color/colorOro"
                android:secondaryProgressTint="@color/colorOro"
                android:numStars="5" android:stepSize="0.5"
                android:scaleX="0.5" android:scaleY="0.5" android:transformPivotX="0dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/testoRecensione"
                android:textSize="17sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomeNicknameRecensore"
                android:textSize="17sp"
                android:textStyle="italic"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dataRecensione"
                android:textSize="17sp"
                android:textStyle="normal"/>

    </LinearLayout>

</RelativeLayout>