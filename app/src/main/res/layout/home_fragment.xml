<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewHome"
            android:background="@color/colorBianco" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imageView"
            android:visibility="visible"

            app:layout_constraintTop_toTopOf="@+id/viewHome"
            android:layout_marginTop="7dp" android:layout_marginEnd="292dp"
            app:layout_constraintEnd_toEndOf="@+id/viewHome" app:layout_constraintStart_toStartOf="@+id/viewHome"
            android:layout_marginStart="11dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="47dp"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/schermataRicercaButtonDaHome"

            app:layout_constraintTop_toTopOf="@+id/viewHome"
            android:layout_marginTop="5dp" app:layout_constraintStart_toStartOf="@+id/viewHome"
            android:layout_marginStart="244dp" android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:layout_marginEnd="112dp"
            app:layout_constraintEnd_toEndOf="@+id/viewHome"/>
    <Button
            android:text="Accedi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"

            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@+id/viewHome" android:layout_marginBottom="127dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" app:layout_constraintStart_toStartOf="@+id/viewHome"
            android:layout_marginStart="307dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/viewHome"/>
    <TextView
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:text="Consigliati"
            android:textSize="40sp" android:textStyle="bold" android:textColor="@color/colorNero"
            android:id="@+id/textView2"

            app:layout_constraintTop_toTopOf="@+id/viewHome"
            android:layout_marginTop="96dp" app:layout_constraintStart_toStartOf="@+id/viewHome"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="128dp"
            app:layout_constraintEnd_toEndOf="@+id/viewHome" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/scrollView2"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:scrollbars="none"
            android:padding="10dp"

            android:id="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="@+id/viewHome"
            app:layout_constraintStart_toStartOf="@+id/viewHome"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/viewHome"
            android:layout_marginTop="180dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ristoranti"
                    android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorNero"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotel"
                    android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorNero"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attrazioni"
                    android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorNero"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>